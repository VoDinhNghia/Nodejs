         app.set("view engine", "ejs");<br>
         app.set("views", "./views");<br>
         var server=require("http").Server(app);<br>
         server.listen(8888);<br>
         app.get("/", function(request, response)  {<br>
             response.render("index");<br>
          });
        </code>
